<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.user.barcode.RegistrationPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="registration"
            android:textSize="25dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>

        <EditText
            android:id="@+id/newUserName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/gray"
            android:inputType="text"
            android:lines="1"
            android:textSize="17sp"
            android:hint="Name"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/newUserSurname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/gray"
            android:inputType="text"
            android:lines="1"
            android:textSize="17sp"
            android:hint="Surname"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/newUserEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/gray"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:textSize="17sp"
            android:hint="Email"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/newUserPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/gray"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:textSize="17sp"
            android:hint="Password"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/newUserPasswordConfirmations"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/gray"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:textSize="17sp"
            android:hint="Confirm password"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="18sp"
            android:textColor="@color/danger"
            android:id="@+id/errors"
            />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="register"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="@color/green"
            android:layout_marginTop="20dp"
            android:onClick="Register"/>


        <TextView
            android:id="@+id/lblLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily = "sans-serif"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:onClick="toLoginPage"
            android:text="Login page"/>



    </LinearLayout>

</RelativeLayout>
